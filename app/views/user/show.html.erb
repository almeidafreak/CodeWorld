
<table>
  <tbody>
    <% @users.each do |user| %>
      <div class="entry">

        <h3><%= user.firstname %></h3>
        <h3><%= user.surname %></h3>
        <p class="tag">Address: </p><%= user.address %>
        <p class="tag">Phone: </p>
        <span class="price"><%= user.phone %></span>
        <p class="tag">Email: </p><%= user.email %>
        
        <span class="button">
          <%= link_to "Destroy", admin_destroy_user_path(user), method: :delete, 
            data: { confirm: "You sure?" } %>
        </span>
      </div>
    <% end %>
  </tbody>
</table>